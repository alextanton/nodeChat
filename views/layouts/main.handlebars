<!doctype html>
<html>
  <head>
    <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
    <script src="http://code.jquery.com/jquery-1.11.1.js"></script>
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <script src="chat.js"></script>
    <title>Socket.IO chat</title>
    <style>
      html {height:100%;}
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; background-color: #F0F1F3; height:100%;}
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
    </style>
  </head>
  <body>
  <div style="text-align: center ;margin-bottom: 10px; height: 70px; background-color: white; width: 50%; margin-left:auto; margin-right:auto;"><img height="58px" width="50px" src="{{this.receiver}}.png" class="img-thumbnail"></div>
  <div class="row" style="padding-left:5px; padding-right:5px; width: 50%; background-color:white; height: 85%; margin-left:auto; margin-right:auto;">
    {{#each ms}}
      {{#if this.format}}
        <div style="clear: both; margin-top: 10px;padding-left: 5px; padding-right: 5px;border-radius: 3px;background-color: #7bc4ef; max-width: 75%; float: right">
          <h5>{{this.message}}</h5>
        </div>
      {{else}}
        <div style="clear: both; margin-top: 10px;padding-left: 5px; padding-right: 5px;border-radius: 3px;background-color: #62bf6e; max-width: 75%; float: left">
          <h5>{{this.message}}</h5>
        </div>
      {{/if}}
    {{/each}}
    <!-- <div class="mess" style="width:100%; text-align: right;"><h3>Hey</span></h3></div> -->
  </div>
  </body>
  {{{body}}}
</html>

